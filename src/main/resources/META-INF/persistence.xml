<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="bikes5" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/bikes5</jta-data-source>
        <class>entity.Customer</class>
        <class>entity.Order</class>
        <class>entity.OrderItem</class>
        <class>entity.Product</class>
        <class>entity.Brand</class>
        <class>entity.Staff</class>
        <class>entity.Store</class>
        <class>entity.Stock</class>
        <class>entity.Category</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="validate" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
        </properties>
    </persistence-unit>
</persistence>